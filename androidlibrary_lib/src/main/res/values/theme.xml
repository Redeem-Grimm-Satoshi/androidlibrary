<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

   <!-- Contains Light Theme -->

   <style name="OdkActionBar"
       parent="Widget.MaterialComponents.Light.ActionBar.Solid">
      <item name="displayOptions">useLogo|showHome|showTitle</item>
      <item name="background">@color/colorPrimary</item>
      <item name="android:textColor">@color/colorOnPrimary</item>
      <item name="android:itemBackground">@color/colorOnPrimary</item>

      <item name="logo">@drawable/app_logo</item>
   </style>

   <!-- Light Theme-->
   <style name="Opendatakit" parent="Theme.MaterialComponents.Light.NoActionBar">
      <item name="android:scrollbarThumbHorizontal">@drawable/thumb</item>
      <item name="android:scrollbarThumbVertical">@drawable/thumb</item>
      <item name="android:scrollbarSize">2.5mm</item>
      <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
      <item name="android:scrollbarAlwaysDrawHorizontalTrack">true</item>
      <item name="android:statusBarColor">@color/white</item>


      <!-- # Keep code commented for error reference.
      <item name="android:colorPrimary">@color/colorPrimary</item>
      <item name="colorSecondary">@color/colorSecondary</item>
      <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
      -->

      <item name="android:colorPrimary">@color/colorPrimary</item>
      <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
      <item name="colorSecondary">@color/colorSecondary</item>
      <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
      <item name="android:colorBackground">@color/colorBackground</item>
      <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>

      <item name="colorOnPrimary">@color/colorOnPrimary</item>
      <item name="colorOnSecondary">@color/colorOnSecondary</item>
      <item name="colorOnSurface">@color/colorOnSurface</item>
      <item name="colorOnError">@color/colorOnError</item>

      <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>

      <item name="colorAccent">@color/blue_300</item>
      <!--  <item name="actionBarStyle">@style/OdkActionBar</item> # Not needed since we're dealing with custom app bar-->
      <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

      <item name="buttonStyle">@style/ButtonStyle</item>

   </style>


   <!--Individual Stylings For Different Components -->


   <!-- AlertDialog Theme -->
   <style name="OdkXAlertDialogStyle"  parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
      <item name="colorAccent">@color/blue_300</item>
      <item name="android:textColorPrimary">@color/grey_500</item>
      <item name="colorSurface">@color/white</item>
      <item name="android:background">@color/white</item>
      <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
      <item name="materialAlertDialogTitleTextStyle">@style/titleStyle</item>

      <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
      <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
   </style>

   <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
      <item name="android:textColor">@color/red_300</item>
   </style>

   <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
      <item name="android:textColor">@color/blue_300</item>
   </style>

   <style name="DialogCorners">
      <item name="cornerFamily">rounded</item>
      <item name="cornerSize">28dp</item>
   </style>

   <style name="titleStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
      <item name="fontFamily">@font/sourcesanspro_regular</item>
      <item name="android:textColor">@color/grey_500</item>
      <item name="android:gravity">center_horizontal</item>
   </style>
   <!--End-->


   <!--CardTheme Style-->
   <style name="CardTheme" parent="Opendatakit">
      <item name="cardBackgroundColor">@color/colorCardBackground</item>
      <item name="cardCornerRadius">28dp</item>
      <item name="cardElevation">0dp</item>
   </style>

   <!--TextButtonStyle-->
   <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
      <item name="android:textAllCaps">true</item>
      <item name="fontFamily">@font/sourcesanspro_regular</item>
      <item name="android:textColor">@color/colorPrimaryText</item>
      <item name="android:textSize">14sp</item>
      <item name="android:textStyle">bold</item>
   </style>

   <!--Primary button round-->
   <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
      <item name="android:textAllCaps">true</item>
      <item name="android:textSize">14sp</item>
      <item name="fontFamily">@font/sourcesanspro_regular</item>
      <item name="android:textColor">@color/btn_text_color</item>
      <item name="backgroundTint">@color/btn_background</item>
      <item name="cornerRadius">100dp</item>
   </style>

   <!--delete button round-->
   <style name="ButtonStyleDelete" parent="Widget.MaterialComponents.Button">
      <item name="android:textAllCaps">true</item>
      <item name="android:textSize">14sp</item>
      <item name="fontFamily">@font/sourcesanspro_regular</item>
      <item name="android:textColor">@color/btn_text_color</item>
      <item name="backgroundTint">@color/red_300</item>
      <item name="cornerRadius">100dp</item>
   </style>

   <!--Primary button square -->
   <style name="ButtonStyleSquare" parent="Widget.MaterialComponents.Button">
      <item name="android:textAllCaps">true</item>
      <item name="android:textSize">14sp</item>
      <item name="fontFamily">@font/sourcesanspro_regular</item>
      <item name="android:textColor">@color/btn_text_color</item>
      <item name="backgroundTint">@color/btn_background</item>
      <item name="cornerRadius">50dp</item>
   </style>

   <!--Secondary button round -->
   <style name="ButtonStyleSecondary" parent="Widget.MaterialComponents.Button">
      <item name="android:textAllCaps">true</item>
      <item name="android:textSize">14sp</item>
      <item name="fontFamily">@font/sourcesanspro_regular</item>
      <item name="android:textColor">@color/colorPrimaryText</item>
      <item name="backgroundTint">@color/colorSecondaryBackground</item>
      <item name="cornerRadius">100dp</item>
   </style>

   <!--OutlinedButtonStyle-->
   <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
      <item name="android:textAllCaps">true</item>
      <item name="android:textSize">14sp</item>
      <item name="fontFamily">@font/sourcesanspro_regular</item>
      <item name="android:textColor">@color/colorPrimaryText</item>
      <item name="strokeColor">@color/btn_background</item>
      <item name="cornerRadius">100dp</item>
   </style>

   <!--SmallButtonStyle-->
   <style name="SmallButtonStyle" parent="ButtonStyle">
      <item name="fontFamily">@font/sourcesanspro_regular</item>
      <item name="android:textSize">14sp</item>
   </style>


   <!--Appbar Style-->
   <style name="AppBarStyle">
      <item name="android:background">@color/colorPrimary</item>
   </style>

   <style name="AppBarLabelStyle">
      <item name="android:textSize">30sp</item>
      <item name="android:textStyle">bold</item>
      <item name="android:textColor">@color/black</item>
   </style>
   <!-- End -->


   <!--HeadingStyles-->
   <style name="HeadingStyle">
      <item name="android:textSize">18sp</item>
      <item name="android:textStyle">bold</item>
      <item name="fontFamily">@font/montserrat</item>
      <item name="background">@color/colorPrimaryBackground</item>
      <item name="android:textColor">@color/colorPrimaryText</item>
   </style>

   <!-- YellowHeadingStyle -->
   <style name="YellowHeadingStyle" parent="HeadingStyle">
      <item name="android:textColor">@color/yellow_300</item>
      <item name="font">@font/montserrat_semibold</item>
   </style>

   <style name="SecondaryHeadingStyle" parent="HeadingStyle">
      <item name="android:textColor">@color/colorSecondaryText</item>
   </style>

   <style name="SmallHeadingStyle" parent="HeadingStyle">
      <item name="android:textSize">14sp</item>
   </style>

   <style name="LargeHeadingStyle" parent="HeadingStyle">
      <item name="android:textSize">32sp</item>
   </style>

   <!--End-->

   <!--TextViewStyles-->
   <style name="TextViewStyle" parent="HeadingStyle">
      <item name="android:textStyle">normal</item>
   </style>

   <style name="TextServerUrlStyle" parent="TextViewStyle">
      <item name="android:textColor">@color/colorPrimaryBackground</item>
   </style>

   <style name="SmallTextViewStyle" parent="TextViewStyle">
      <item name="android:textSize">14sp</item>
   </style>
   <!--End-->

   <!-- LinkStyle -->
   <style name="LinkStyle">
      <item name="android:textColor">@color/colorPrimaryBackground</item>

   </style>
   <!-- End -->


   <!-- ParagraphStyle-->
   <style name="ParagraphStyle">

   </style>
   <!-- End -->


   <!--DropdownMenuTheme-->
   <style name="DropdownMenuTheme" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
      <item name="boxBackgroundColor">@color/white</item>
      <item name="boxStrokeColor">@color/white</item>
   </style>

   <!--TextInputTheme-->
   <style name="TextInputTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
      <item name="backgroundColor">@color/white</item>
      <item name="colorOnSurface">@color/colorPrimaryBackground</item>
      <item name="boxStrokeColor">@color/colorPrimaryBackground</item>
      <item name="strokeColor">@color/btn_background</item>
      <item name="hintTextColor">@color/colorPrimaryBackground</item>
      <item name="hintEnabled">true</item>
      <item name="android:textCursorDrawable">@null</item>
      <item name="hintAnimationEnabled">true</item>
      <item name="strokeWidth">1dp</item>
   </style>
</resources>
